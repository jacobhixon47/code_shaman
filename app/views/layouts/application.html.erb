<!DOCTYPE html>
<html>
  <head>
    <title>CodeShaman</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <div class="row">
          <% if flash[:notice] %>
            <div class="notice-bar">
              <%= flash[:notice] %>
            </div>
          <% elsif flash[:alert] %>
            <div class="alert-bar">
              <%= flash[:alert] %>
            </div>
          <% end %>
        </div>
      <%= yield %>
    </div>
  </body>
</html>
